{
  "name": "Usuario",
  "plural": "usuarios",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "ordenes": {
      "type": "hasMany",
      "model": "Orden",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "getRole"
    }
  ],
  "methods": {
    "prototype.getRole": {
      "returns": [
        {
          "arg": "data",
          "type": "object",
          "root": true,
          "description": "Response of role"
        }
      ],
      "description": "Get role of a user",
      "http": [
        {
          "path": "/get-role",
          "verb": "get"
        }
      ]
    },
    "getWithRole": {
      "accepts": [],
      "returns": [
        {
          "arg": "users",
          "type": "array",
          "root": true,
          "description": "Array of users with roles"
        }
      ],
      "description": "Get user names and roles",
      "http": [
        {
          "path": "/get-with-roles",
          "verb": "get"
        }
      ]
    }
  },
  "mixins": {
    "Paginator": true,
    "SoftDelete" : true
  }
}

{
  "name": "Producto",
  "plural": "productos",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "precio": {
      "type": "number",
      "required": true,
      "postgresql": {
        "dataType": "NUMERIC(10,2)"
      }
    },
    "descripcion": {
      "type": "string"
    },
    "imagenUrl": {
      "type": "string"
    }
  },
  "mixins": {
    "Paginator": true,
    "SoftDelete" : true
  },
  "validations": [],
  "relations": {
    "categoria": {
      "type": "belongsTo",
      "model": "Categoria",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "ordenDetalles": {
      "type": "hasMany",
      "model": "OrdenDetalle",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
